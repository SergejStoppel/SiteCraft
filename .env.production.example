# ===========================================
# STREETWISEWEB PRODUCTION ENVIRONMENT
# ===========================================
# Copy this file to .env.production for production deployment
# Configure GitHub secrets with these values
# NEVER commit production values to git!

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Production Supabase API Configuration
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Production Redis (Upstash or managed service)
REDIS_URL=rediss://xxx.upstash.io:6380

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Production JWT Secret (MUST BE DIFFERENT from development)
JWT_SECRET=production-super-secret-jwt-key-minimum-32-characters-here

# Production Session Secret (MUST BE DIFFERENT from development)
SESSION_SECRET=production-super-secret-session-key-minimum-32-characters-here

# Production CORS Origin (your actual domain)
CORS_ORIGIN=https://streetwiseweb.com

# ===========================================
# ERROR TRACKING
# ===========================================
# Production Sentry DSN
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Production environment
SENTRY_ENVIRONMENT=production

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Production environment
NODE_ENV=production

# Production server port
PORT=3001

# Production frontend URL
FRONTEND_URL=https://streetwiseweb.com

# ===========================================
# ANALYSIS CONFIGURATION
# ===========================================
# Production analysis timeout (stricter)
ANALYSIS_TIMEOUT=30000

# Lower concurrent analyses for production
MAX_CONCURRENT_ANALYSES=3

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# Stricter rate limiting for production
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50

# Production analysis rate limit
ANALYSIS_RATE_LIMIT_MAX=5

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Production log level
LOG_LEVEL=warn

# Production log file
LOG_FILE=./logs/production.log

# ===========================================
# FEATURE FLAGS
# ===========================================
# Production features
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SOCIAL_LOGIN=false

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================
# Production email service
SENDGRID_API_KEY=your-production-sendgrid-key
FROM_EMAIL=noreply@streetwiseweb.com

# Production cloud storage
AWS_ACCESS_KEY_ID=your-production-access-key
AWS_SECRET_ACCESS_KEY=your-production-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=your-production-bucket-name

# ===========================================
# PRODUCTION TOOLS
# ===========================================
# Disable debug in production
DEBUG=false

# Disable API docs in production
ENABLE_API_DOCS=false

# Never mock services in production
MOCK_EXTERNAL_SERVICES=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Production server details (for CI/CD)
PRODUCTION_HOST=your-server-ip-or-domain
PRODUCTION_USER=deploy
PRODUCTION_PORT=22

# Health check configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# MONITORING AND ALERTING
# ===========================================
# Application monitoring
ENABLE_MONITORING=true
MONITORING_INTERVAL=60000

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket