# ===========================================
# STREETWISEWEB ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.development for local development
# Never commit actual .env files to git!

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Supabase API Configuration
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Local Redis (for development)
REDIS_URL=redis://localhost:6379

# Upstash Redis (for production)
# REDIS_URL=rediss://xxx.upstash.io:6380

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret (minimum 32 characters, generate unique for each environment)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-here

# Session Secret (minimum 32 characters, generate unique for each environment)
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters-here

# CORS Origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# ===========================================
# ERROR TRACKING
# ===========================================
# Sentry DSN (get from Sentry project settings)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Environment for Sentry
SENTRY_ENVIRONMENT=development

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Environment (development, production, test)
NODE_ENV=development

# Backend server port
PORT=3001

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# ===========================================
# ANALYSIS CONFIGURATION
# ===========================================
# Maximum time for analysis in milliseconds
ANALYSIS_TIMEOUT=30000

# Maximum number of concurrent analyses
MAX_CONCURRENT_ANALYSES=5

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# Rate limit window in milliseconds (15 minutes default)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX=100

# Analysis-specific rate limit (per user if authenticated)
ANALYSIS_RATE_LIMIT_MAX=10

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file location
LOG_FILE=./logs/app.log

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features during development
ENABLE_ANALYTICS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SOCIAL_LOGIN=false

# ===========================================
# THIRD-PARTY SERVICES (Optional)
# ===========================================
# Email service (SendGrid, etc.)
# SENDGRID_API_KEY=your-sendgrid-key
# FROM_EMAIL=noreply@streetwiseweb.com

# Cloud storage (AWS S3, DigitalOcean Spaces, etc.)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable debug mode
DEBUG=false

# Enable API documentation
ENABLE_API_DOCS=true

# Mock external services for testing
MOCK_EXTERNAL_SERVICES=false